@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var nombreUsuario = TempData["UsuarioLogueado"]?.ToString();

    if (string.IsNullOrEmpty(nombreUsuario))
    {
        nombreUsuario = HttpContextAccessor.HttpContext?.Session.GetString("NombreCompleto");
    }

    if (string.IsNullOrEmpty(nombreUsuario))
    {
        nombreUsuario = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioActual");
    }

    var tipoUsuario = HttpContextAccessor.HttpContext?.Session.GetInt32("TipoUsuario") ?? 0;
    var esAdministrador = tipoUsuario == 1;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nova Online - Administración</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .navbar-brand img {
            height: 40px;
        }

        .user-info {
            color: white;
            margin-right: 15px;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            margin-top: 50px;
            border-top: 1px solid #dee2e6;
        }

        .main-menu {
            background-color: #2c3e50;
        }

            .main-menu .nav-link {
                color: white !important;
                padding: 10px 20px;
            }

                .main-menu .nav-link:hover {
                    background-color: #34495e;
                }

        .demo-badge {
            background-color: #ff9800;
            color: white;
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 12px;
            margin-left: 5px;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/Productos/Index">
                <i class="fas fa-cube"></i> Nova Online
                @if (!esAdministrador && !string.IsNullOrEmpty(nombreUsuario))
                {
                    <span class="demo-badge">DEMO</span>
                }
            </a>
            <div class="d-flex align-items-center">
                @if (!string.IsNullOrEmpty(nombreUsuario))
                {
                    <span class="user-info">
                        <i class="fas fa-user"></i> @nombreUsuario
                        @if (!esAdministrador)
                        {
                            <span class="demo-badge">MODO PRUEBA</span>
                        }
                    </span>
                }
                <a href="/Account/Logout" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-sign-out-alt"></i> Salir
                </a>
            </div>
        </div>
    </nav>

    <!-- Menú Principal -->
    @if (!string.IsNullOrEmpty(nombreUsuario))
    {
        <nav class="navbar navbar-expand-lg navbar-dark main-menu">
            <div class="container">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString().Contains("Productos") == true ? "active" : "")"
                               href="/Productos/Index">
                                <i class="fas fa-box"></i> Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString().Contains("Proveedores") == true ? "active" : "")"
                               href="/Proveedores/Index">
                                <i class="fas fa-truck"></i> Proveedores
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-shopping-cart"></i> Ingresos de Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-users"></i> Usuarios
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <!-- Contenido Principal -->
    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Nova Online</h5>
                    <p>Sistema de Ventas y Distribución</p>
                    <p>
                        @if (!esAdministrador && !string.IsNullOrEmpty(nombreUsuario))
                        {
                            <span class="badge bg-warning text-dark">
                                <i class="fas fa-exclamation-triangle"></i> MODO PRUEBA - DESARROLLO
                            </span>
                        }
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h5>Contacto</h5>
                    <p>
                        <i class="fas fa-phone"></i> (506) 2222-2222<br>
                        <i class="fas fa-envelope"></i> info@novaonline.com<br>
                        <i class="fas fa-map-marker-alt"></i> Cartago, Costa Rica
                    </p>
                </div>
            </div>
            <div class="text-center mt-3">
                <small>© 2025 Colegio Universitario de Cartago - Programación IV - Proyecto Final</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>