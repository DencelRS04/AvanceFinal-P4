@page
@model WebProducto.Pages.Account.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nova Online | Login Administrativo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            width: 100%;
            max-width: 500px;
            animation: fadeIn 0.5s ease-out;
        }

        

        .login-header {
            background: linear-gradient(to right, #4A00E0, #8E2DE2);
            color: white;
            padding: 30px 20px;
            text-align: center;
        }

            .login-header h1 {
                font-size: 28px;
                margin-bottom: 10px;
                font-weight: 600;
            }

            .login-header p {
                opacity: 0.9;
                font-size: 15px;
            }

        .logo {
            font-size: 40px;
            margin-bottom: 15px;
            color: #fff;
        }

        .login-form {
            padding: 40px;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
                color: #333;
                font-size: 14px;
            }

        .input-with-icon {
            position: relative;
        }

            .input-with-icon i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #8E2DE2;
                font-size: 18px;
            }

            .input-with-icon input {
                width: 100%;
                padding: 15px 15px 15px 50px;
                border: 2px solid #e1e1e1;
                border-radius: 10px;
                font-size: 16px;
                transition: all 0.3s;
            }

                .input-with-icon input:focus {
                    outline: none;
                    border-color: #8E2DE2;
                    box-shadow: 0 0 0 3px rgba(142, 45, 226, 0.1);
                }

                .input-with-icon input:hover {
                    border-color: #b5b5b5;
                }

        .btn-login {
            width: 100%;
            padding: 16px;
            background: linear-gradient(to right, #4A00E0, #8E2DE2);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 10px;
        }

            .btn-login:hover {
                background: linear-gradient(to right, #3a00b0, #7a1dc2);
                transform: translateY(-2px);
                box-shadow: 0 7px 14px rgba(142, 45, 226, 0.3);
            }

            .btn-login:active {
                transform: translateY(0);
            }

            .btn-login i {
                margin-right: 8px;
            }

        .btn-demo {
            width: 100%;
            padding: 16px;
            background: linear-gradient(to right, #00b09b, #96c93d);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 15px;
        }

            .btn-demo:hover {
                background: linear-gradient(to right, #009688, #8bc34a);
                transform: translateY(-2px);
                box-shadow: 0 7px 14px rgba(0, 176, 155, 0.3);
            }

        .demo-section {
            text-align: center;
            margin: 25px 0;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
            border-left: 4px solid #00b09b;
        }

            .demo-section p {
                margin-bottom: 10px;
                color: #555;
                font-size: 14px;
            }

        .error-message {
            background-color: #ffeaea;
            border-left: 4px solid #ff4757;
            padding: 12px 15px;
            margin-top: 20px;
            border-radius: 5px;
            color: #ff4757;
            font-size: 14px;
            display: flex;
            align-items: center;
            animation: shake 0.5s;
        }

        

        .error-message i {
            margin-right: 10px;
            font-size: 18px;
        }

        .login-footer {
            text-align: center;
            padding: 20px;
            color: #666;
            font-size: 13px;
            border-top: 1px solid #eee;
        }

            .login-footer a {
                color: #8E2DE2;
                text-decoration: none;
                font-weight: 500;
            }

                .login-footer a:hover {
                    text-decoration: underline;
                }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #666;
            cursor: pointer;
            font-size: 18px;
        }

        
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <div class="logo">
                <i class="fas fa-cube"></i>
            </div>
            <h1>Nova Online</h1>
            <p>Sistema Administrativo de Productos</p>
        </div>

        <form method="post" class="login-form" id="loginForm">
            <div class="form-group">
                <label for="usuario"><i class="fas fa-user"></i> USUARIO</label>
                <div class="input-with-icon">
                    <i class="fas fa-user-circle"></i>
                    <input asp-for="Usuario" id="usuario" placeholder="Ingresa tu usuario" autocomplete="username" required />
                </div>
            </div>

            <div class="form-group">
                <label for="contrasenia"><i class="fas fa-lock"></i> CONTRASEÑA</label>
                <div class="input-with-icon">
                    <i class="fas fa-key"></i>
                    <input asp-for="Contrasenia" id="contrasenia" type="password" placeholder="Ingresa tu contraseña" autocomplete="current-password" required />
                    <button type="button" class="password-toggle" id="togglePassword">
                        <i class="far fa-eye"></i>
                    </button>
                </div>
            </div>

            <button type="submit" class="btn-login">
                <i class="fas fa-sign-in-alt"></i> INGRESAR AL SISTEMA
            </button>

            <div class="demo-section">
                <p><i class="fas fa-info-circle"></i> ¿Problemas con el login del servidor?</p>
                <button type="button" class="btn-demo" onclick="loginDemo()">
                    <i class="fas fa-user-secret"></i> USAR CREDENCIALES DEMO
                </button>
                <p style="margin-top: 10px; font-size: 12px; color: #777;">
                    <i class="fas fa-laptop-code"></i> Esta opción permite continuar con el desarrollo
                </p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMensaje))
            {
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>@Model.ErrorMensaje</span>
                </div>
            }
        </form>

        <div class="login-footer">
            <p>© 2025 Nova Online. <a href="#">¿Olvidaste tu contraseña?</a></p>
            <p>Solo personal autorizado - Colegio Universitario de Cartago</p>
        </div>
    </div>

    <script>
        // Mostrar/ocultar contraseña
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordInput = document.getElementById('contrasenia');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        // Login con credenciales demo
        function loginDemo() {
            document.getElementById('usuario').value = 'deroso';
            document.getElementById('contrasenia').value = '11111111111aA-';

            // Mostrar mensaje de demo
            const demoMsg = document.createElement('div');
            demoMsg.className = 'error-message';
            demoMsg.style.backgroundColor = '#e8f5e9';
            demoMsg.style.borderLeftColor = '#4CAF50';
            demoMsg.style.color = '#2e7d32';
            demoMsg.innerHTML = '<i class="fas fa-info-circle"></i> <span>Usando credenciales demo para desarrollo...</span>';

            // Remover mensajes de error previos
            const oldError = document.querySelector('.error-message');
            if (oldError) oldError.remove();

            // Insertar nuevo mensaje
            const form = document.getElementById('loginForm');
            const submitBtn = document.querySelector('.btn-login');
            form.insertBefore(demoMsg, submitBtn.nextSibling);

            // Enviar formulario automáticamente
            setTimeout(() => {
                form.submit();
            }, 1500);
        }

        // Validación del formulario
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const usuario = document.getElementById('usuario').value.trim();
            const contrasenia = document.getElementById('contrasenia').value.trim();

            if (!usuario || !contrasenia) {
                e.preventDefault();
                alert('Por favor, completa todos los campos');
                return false;
            }

            // Mostrar loading
            const submitBtn = this.querySelector('.btn-login');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> AUTENTICANDO...';
            submitBtn.disabled = true;

            // Re-habilitar después de 5 segundos por si hay error
            setTimeout(() => {
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }, 5000);
        });

        // Auto-focus en usuario al cargar
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('usuario').focus();

            // Si hay error, hacer scroll al mensaje
            if (document.querySelector('.error-message')) {
                document.querySelector('.error-message').scrollIntoView({ behavior: 'smooth' });
            }
        });
    </script>
</body>
</html>