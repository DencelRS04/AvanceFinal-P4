@page
@model WebProducto.Pages.Productos.IndexModel
@{
    ViewData["Title"] = "Productos";
}

<h2>Mantenimiento de Productos</h2>

<p>
    <a class="btn btn-success" asp-page="Create">Nuevo Producto</a>
</p>

<table>
    <thead>
        <tr>
            <th>Número</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Productos)
        {
            <tr>
                <td>@p.NumeroProducto</td>
                <td>@p.NombreProducto</td>
                <td>@p.Precio</td>
                <td>
                    <a class="btn btn-warning btn-sm"
                       asp-page="Edit"
                       asp-route-numero="@p.NumeroProducto"
                       asp-route-nombre="@p.NombreProducto"
                       asp-route-precio="@p.Precio">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
