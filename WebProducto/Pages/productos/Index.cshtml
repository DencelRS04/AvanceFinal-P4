@page
@model WebProducto.Pages.Productos.IndexModel
@{
    ViewData["Title"] = "Productos";
    Layout = "_Layout";
}

<h2>Mantenimiento de Productos</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text" name="Filtro" value="@Model.Filtro" class="form-control" placeholder="Filtrar por código o nombre..." />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary w-100">Buscar</button>
    </div>
</form>

<p>
    <a class="btn btn-success" asp-page="Create">Nuevo Producto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre del producto</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ListaProductos != null && Model.ListaProductos.Count > 0)
        {
            foreach (var p in Model.ListaProductos)
            {
                <tr>
                    <td>@p.NumeroProducto</td>
                    <td>@p.NombreProducto</td>
                    <td>@p.Precio</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-page="Edit" asp-route-numero="@p.NumeroProducto">Modificar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hay productos para mostrar.</td>
            </tr>
        }
    </tbody>
</table>
