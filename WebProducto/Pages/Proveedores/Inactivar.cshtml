@page "{cedula}"
@model WebProducto.Pages.Proveedores.InactivarModel
@{
    ViewData["Title"] = "Inactivar Proveedor";
    Layout = "_Layout";
}

<h2>Inactivar Proveedor</h2>

<p>¿Está seguro de inactivar el proveedor?</p>

<form method="post">
    <div class="mb-3">
        <label>Cédula jurídica</label>
        <input asp-for="Prov.CedulaJuridica" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Estado</label>
        <input asp-for="Prov.Estado" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-warning">Sí, inactivar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
