@page
@model WebProducto.Pages.Proveedores.IndexModel
@{
    ViewData["Title"] = "Proveedores";
}

<h2>Mantenimiento de Proveedores</h2>

<form method="get" style="margin-bottom:15px;">
    <input type="text" name="Filtro" value="@Model.Filtro" placeholder="Filtrar..." />
    <button class="btn btn-primary">Buscar</button>
</form>

<p>
    <a class="btn btn-success" asp-page="Create">Nuevo Proveedor</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Cédula Jurídica</th>
            <th>Empresa</th>
            <th>Contacto</th>
            <th>Teléfono</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var p in Model.ListaProveedores)
        {
            <tr>
                <td>@p.CedulaJuridica</td>
                <td>@p.NombreEmpresa</td>
                <td>@p.NombreContacto</td>
                <td>@p.Telefono</td>
                <td>@p.Estado</td>
                <td>
                    <a class="btn btn-warning btn-sm"
                       asp-page="Edit"
                       asp-route-cedula="@p.CedulaJuridica">Editar</a>

                    <a class="btn btn-danger btn-sm"
                       asp-page="Inactivar"
                       asp-route-cedula="@p.CedulaJuridica">Inactivar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
