@page
@model WebProducto.Pages.Proveedores.IndexModel
@{
    ViewData["Title"] = "Proveedores";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>
        <i class="fas fa-truck"></i> Mantenimiento de Proveedores
    </h2>

    <!-- Mensajes -->
    @if (!string.IsNullOrEmpty(Model.MensajeExito))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @Model.MensajeExito
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.MensajeError))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @Model.MensajeError
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Barra de acciones -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <a asp-page="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Nuevo Proveedor
                    </a>
                </div>
                <div class="col-md-6">
                    <form method="get" class="d-flex">
                        <input type="text" class="form-control me-2"
                               asp-for="Filtro" placeholder="Buscar proveedor...">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de proveedores -->
    <div class="card">
        <div class="card-body">
            @if (Model.Proveedores.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Cédula Jurídica</th>
                                <th>Empresa</th>
                                <th>Contacto</th>
                                <th>Teléfono</th>
                                <th>Correo</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var prov in Model.Proveedores)
                            {
                                <tr>
                                    <td><strong>@prov.CedulaJuridica</strong></td>
                                    <td>@prov.NombreEmpresa</td>
                                    <td>@prov.NombreContacto</td>
                                    <td>@prov.Telefono</td>
                                    <td>@prov.Correo</td>
                                    <td>
                                        @if (prov.Estado == "Activo" || prov.Estado == "1")
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="Edit" asp-route-cedula="@prov.CedulaJuridica"
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a asp-page="Inactivar" asp-route-cedula="@prov.CedulaJuridica"
                                               class="btn btn-danger btn-sm">
                                                <i class="fas fa-ban"></i> Inactivar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No se encontraron proveedores.
                    @if (!string.IsNullOrEmpty(Model.Filtro))
                    {
                        <span>Intenta con otro criterio de búsqueda.</span>
                    }
                    else
                    {
                        <span>
                            <a asp-page="Create" class="alert-link">Registra el primer proveedor</a>
                        </span>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Eliminar mensajes automáticamente
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}