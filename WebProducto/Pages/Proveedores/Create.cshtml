@page
@model WebProducto.Pages.Proveedores.CreateModel
@{
    ViewData["Title"] = "Nuevo Proveedor";
    Layout = "_Layout";
}

<h2>Nuevo Proveedor</h2>

<form method="post">
    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <div class="mb-3">
        <label>Cédula jurídica</label>
        <input asp-for="Prov.CedulaJuridica" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Nombre de la empresa</label>
        <input asp-for="Prov.NombreEmpresa" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Nombre del contacto</label>
        <input asp-for="Prov.NombreContacto" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Teléfono</label>
        <input asp-for="Prov.Telefono" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Correo electrónico</label>
        <input asp-for="Prov.Correo" class="form-control" />
    </div>

    <input type="hidden" asp-for="Prov.Estado" />

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
