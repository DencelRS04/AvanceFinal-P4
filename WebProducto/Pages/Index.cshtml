@page
@model WebProducto.Pages.IndexModel
@{
    ViewData["Title"] = "Login Administrativo";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="mb-3 text-center">Ingreso Administrativo</h2>

        @if (!string.IsNullOrEmpty(Model.MensajeError))
        {
            <div class="alert alert-danger">
                @Model.MensajeError
            </div>
        }

        <form method="post">
            <div class="form-group mb-3">
                <label for="Usuario">Usuario</label>
                <input asp-for="Usuario" class="form-control" placeholder="Digite su usuario" />
            </div>

            <div class="form-group mb-3">
                <label for="Contrasenia">Contraseña</label>
                <input asp-for="Contrasenia" type="password" class="form-control" placeholder="Digite su contraseña" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
        </form>
    </div>
</div>
